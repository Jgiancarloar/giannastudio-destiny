---
import { eventData } from "../data/eventData.js";
import { eventIcons } from "../data/eventIcons.js";
---

<section class="flex flex-col items-center px-5">
    <p class="font-bold mb-5 text-xl text-center uppercase">Itinerario de actividades</p>

    <div class="grid grid-cols-[1fr_auto_1fr] gap-x-4 gap-y-2 items-center">
        {
            eventData.itinerary.map((item, index) => {
                const Icon = eventIcons[item.icon];
                const isLeft = index % 2 !== 0;

                return (
                    <>
                        {/* Left */}
                        <div class={isLeft ? "text-right" : ""}>
                            {isLeft && (
                                <>
                                    <p class="font-bold tracking-widest uppercase">
                                        {item.title}
                                    </p>
                                    <p class="opacity-80">
                                        {item.time} Hrs.
                                    </p>
                                </>
                            )}
                        </div>

                        {/* Center icon */}
                        <div class="flex justify-center">
                            <div class="h-16 w-16 flex items-center justify-center text-[#6687A1]">
                                <Icon />
                            </div>
                        </div>

                        {/* Right */}
                        <div class={!isLeft ? "text-left" : ""}>
                            {!isLeft && (
                                <>
                                    <p class="font-bold tracking-widest uppercase">
                                        {item.title}
                                    </p>
                                    <p class="opacity-80">
                                        {item.time} Hrs.
                                    </p>
                                </>
                            )}
                        </div>

                        {/* Vertical line except last */}
                        {index !== eventData.itinerary.length - 1 && (
                            <>
                                <div />
                                <div class="flex justify-center">
                                    <div class="bg-gray-300 h-8 w-px" />
                                </div>
                                <div />
                            </>
                        )}
                    </>
                );
            })
        }
    </div>
</section>